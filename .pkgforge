name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: {
    version: '1.3-rc1-1',
    checksum: '2e893ad6136fb0f8d3330c8afd4476bbc302625bf52b1698a7b9ca13cd2854f2'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
