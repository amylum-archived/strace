name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: {
    version: '1.2.1-3',
    checksum: '56fbff447abbf7065e937506ca9d71b93ae4b2006f7625cae243c9c8a202350d'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
