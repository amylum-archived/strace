name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: {
    version: '1.3-rc1-4',
    checksum: '7a27c09f3f36a0c8a2c9a21e1cb9519ae99f7b10ccdaaaa8ab269639aa36cf18'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
