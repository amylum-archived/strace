name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: {
    version: '1.2.1-1',
    checksum: 'b67904991973e55f666ab69a3b47fa13d44e0b930255a8eefcfc35fb2566aa6b'
  },
  'linux-api-headers': {
    version: '4.12-1',
    checksum: '25d3672456a93cc7f6743d4b2c227ad7a9456f4ec2a9f09ab7f2e9e6cb56aeaa'
  }
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
