name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: {
    version: '1.2.1-1',
    checksum: 'b67904991973e55f666ab69a3b47fa13d44e0b930255a8eefcfc35fb2566aa6b'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
