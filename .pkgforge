name 'strace'
org 'amylum'

licenses 'COPYING'

deps(
  libunwind: '1.2-4',
  'linux-api-headers': '4.11-2'
)

configure_flags(
  prefix: '/usr',
  'with-libunwind': nil
)

cflags
harden

build do
  run './bootstrap'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make
  install
end

test do
  run 'strace -V'
end
